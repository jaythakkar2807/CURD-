@model RegistrationApplication.Models.ClassViewModel

@{
    ViewBag.Title = "EditDetail";
}

<div class="container">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form method="post" action="/Home/UpdateRecord/@Model.userById.FirstOrDefault().emp_id">
            <h2>Edit Detail</h2>
            <fieldset>
                <label>Name</label>
                <input type="text" name="Name" id="Name" value="@Model.userById.FirstOrDefault().emp_name" class="form-control" />
            </fieldset>
            <br />
            <fieldset>
                <label>Location</label>
                <input type="text" name="Location" id="Location" class="form-control" value="@Model.userById.FirstOrDefault().emp_location" />
            </fieldset>
            <br />
            <button class="btn btn-success">Update</button>
            <h2> @ViewBag.message</h2>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>


